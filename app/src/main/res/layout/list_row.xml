<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/row_bg"
                android:orientation="vertical"
                android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/seriesImage"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/headLinerText"
        android:text="Headliner"
        android:textStyle="bold"
        android:textColor="#ff212121"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seriesImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/sereType"
        android:text="Type"
        android:textStyle="italic"
        android:textColor="#ff212121"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLinerText"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/serieDate"
        android:text="When"
        android:textStyle="italic"
        android:textColor="#ff212121"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sereType"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/serieInfo"
        android:text="Info"
        android:textStyle="italic"
        android:textColor="#fff"
        android:textSize="16sp"
        android:background="#ff2e2e2e"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serieDate"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>